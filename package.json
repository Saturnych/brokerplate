{
  "name": "brokerplate",
  "version": "0.0.1",
  "description": "Moleculer-based microservices boilerplate",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "compile": "rm -rf build || true; tsc",
    "dev:tsnode": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --instances=max --env --hot --repl --config moleculer.config.ts src/services/**/*.service.ts",
    "dev:node": "node -r ts-node/register ./node_modules/moleculer/bin/moleculer-runner.js --instances=1 --env --hot --repl --config moleculer.config.ts src/services/**/*.service.ts",
    "dev": "nodemon",
    "start": "moleculer-runner --instances=1 --config dist/moleculer.config.js",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "clean": "gts clean",
    "fix": "gts fix ./src/**/*.ts",
    "lint": "gts lint ./src/**/*.ts",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer",
    "typescript",
    "nats"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Saturnych/brokerplate.git"
  },
  "bugs": {
    "url": "https://github.com/Saturnych/brokerplate/issues"
  },
  "homepage": "https://saturnych.ru",
  "author": "Denis Glebko",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "gts": "^3.1.1",
    "jest": "^29.0.3",
    "jest-cli": "^29.0.3",
    "moleculer-repl": "^0.7.2",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.1",
    "ts-node": "^8.8.1"
  },
  "dependencies": {
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.7.18",
    "@types/uuid": "^8.3.4",
    "dotenv": "^16.0.2",
    "ioredis": "^5.2.3",
    "mkdirp": "^1.0.4",
    "moleculer": "^0.14.23",
    "moleculer-db": "^0.8.19",
    "moleculer-db-adapter-mongo": "^0.4.15",
    "moleculer-db-adapter-sequelize": "^0.2.15",
    "moleculer-web": "^0.10.4",
    "nats": "^2.7.1",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "protobufjs": "^7.1.1",
    "redlock": "^4.0.0",
    "sequelize": "^6.23.0",
    "typescript": "^4.8.3",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
