{
  "name": "brokerplate",
  "version": "0.0.2",
  "description": "Moleculer-based microservices API boilerplate",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "compile": "rm -rf dist || true; tsc --build tsconfig.json",
    "dev:tsrunner": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --env --hot --repl --instances=1 --config moleculer.config.ts src/services/**/*.service.ts",
    "dev:runner": "node -r ts-node/register ./node_modules/moleculer/bin/moleculer-runner.js --config moleculer.config.ts src/services/**/*.service.ts",
    "dev:app": "node -r ts-node/register ./src/app.ts",
    "dev": "nodemon",
    "start:runner": "moleculer-runner --config dist/moleculer.config.js",
    "start": "node ./dist/src/app.js",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage --detectOpenHandles",
    "clean": "gts clean",
    "fix": "gts fix ./src/**/*.ts",
    "lint": "gts lint ./src/**/*.ts",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:del": "docker-compose down -v",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer",
    "typescript",
    "nats"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Saturnych/brokerplate.git"
  },
  "bugs": {
    "url": "https://github.com/Saturnych/brokerplate/issues"
  },
  "homepage": "https://saturnych.ru",
  "author": "Denis Glebko",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "gts": "^3.1.1",
    "jest": "^29.3.1",
    "jest-cli": "^29.3.1",
    "nodemon": "^2.0.20",
    "socket.io-client": "^4.5.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@d0whc3r/moleculer-telegram": "^1.2.0",
    "@moleculer/lab": "^0.6.4",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "firebase-admin": "^11.5.0",
    "helmet": "^6.0.1",
    "ioredis": "^5.2.4",
    "jsonwebtoken": "^9.0.0",
    "mkdirp": "^1.0.4",
    "moleculer": "^0.14.28",
    "moleculer-db": "^0.8.21",
    "moleculer-db-adapter-mongo": "^0.4.16",
    "moleculer-db-adapter-sequelize": "^0.2.15",
    "moleculer-io": "^2.2.0",
    "moleculer-repl": "^0.7.3",
    "moleculer-web": "^0.10.5",
    "nats": "^2.10.2",
    "nodemailer": "^6.9.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "protobufjs": "^7.1.2",
    "redlock": "^4.2.0",
    "sequelize": "^6.28.0",
    "serve-static": "^1.15.0",
    "socket.io-nats": "^0.1.1",
    "twilio": "^3.84.1",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
