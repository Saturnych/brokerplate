{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"pretty": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"outDir": "dist"
	},
	"include": ["./**/*"],
	"exclude": [
		"node_modules/**/*",
		"test"
	]
}
